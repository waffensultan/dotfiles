{
    // Extensions:
    // - Discord Presence
    // - Error Lens
    // - GitLens
    // - Markdown Preview Enhanced
    // - Best Themes Redefined
    // - Material Icon Theme
    // - Prettier
    // - Pretty TypeScript Errors
    // - Vim
    // - WSL
    // - Prisma

    "git.autofetch": true,

    "editor.fontSize": 16,
    "editor.defaultColorDecorators": true,
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "SF Mono",
    "editor.cursorBlinking": "smooth",
    "editor.lineNumbers": "relative",
    "editor.wordWrap": "off",

    "zenMode.hideLineNumbers": false,

    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,

    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Best Themes - One Monokai Darker",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.showTabs": "multiple",
    "workbench.statusBar.visible": true,
    "workbench.layoutControl.enabled": false,

    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "SF Mono",

    "vim.highlightedyank.duration": 200,
    "vim.highlightedyank.enable": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.smartRelativeLine": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<S-h>"],
            "commands": [":bprevious"]
        },
        {
            "before": ["<S-l>"],
            "commands": [":bnext"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],

    // Make the theme "One Monokai Darker" more vibrant
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["entity.name.function", "variable.function"],
                "settings": {
                    "foreground": "#a1ef4e"
                }
            },
            {
                "scope": [
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.other"
                ],
                "settings": {
                    "foreground": "#ee5257"
                }
            },
            {
                "scope": ["entity.name.keyword", "variable.keyword"],
                "settings": {
                    "foreground": "#4aa5e8"
                }
            },
            {
                "scope": [
                    "variable",
                    "variable.language",
                    "variable.other",
                    "variable.other.local",
                    "variable.other.global",
                    "variable.parameter",
                    "meta.use.rust",
                    "meta.mod.rust",
                    "entity.name.module.rust",
                    "entity.name.namespace.rust"
                ],
                "settings": {
                    "foreground": "#d7d7d7"
                }
            }
        ]
    },
    "workbench.colorCustomizations": {
        "tab.activeBorderTop": "#3492d4",
        "activityBar.activeBorder": "#3492d4",
        "editor.background": "#090b10",
        "sideBar.background": "#080a0f",
        "sideBar.border": "#080a0f",
        "activityBar.background": "#080a0f",
        "titleBar.activeBackground": "#080a0f"
    },

    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },

    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },

    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "markdown-preview-enhanced.previewColorScheme": "systemColorScheme",

    "prettier.tabWidth": 4,
}
