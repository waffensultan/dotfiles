{
    "git.autofetch": true,

    "zenMode.hideLineNumbers": false,

    "editor.fontSize": 16, // Options: 18 (Dank Mono), 17 (JetBrains Mono & Maple Mono)
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": true,
    "editor.formatOnSave": false,
    "editor.defaultColorDecorators": "auto",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "Maple Mono", // Options: Dank Mono, JetBrains  Mono, Maple Mono
    "editor.cursorBlinking": "smooth",
    "editor.lineNumbers": "relative",
    "editor.wordWrap": "off",
    "editor.inlayHints.enabled": "off",
    "editor.cursorSurroundingLines": 8, // Mostly for Vim

    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",

    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "flow-dark",
    "workbench.editor.showTabs": "multiple",
    "workbench.colorTheme": "Best Themes - One Monokai Darker",
    "workbench.statusBar.visible": true,
    "workbench.layoutControl.enabled": false,
    "workbench.list.smoothScrolling": true,

    "terminal.integrated.fontFamily": "Maple Mono NF",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Ubuntu (WSL)": {
            "path": "C:\\WINDOWS\\System32\\wsl.exe",
            "args": ["-d", "Ubuntu"]
        }
    },

    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.smartRelativeLine": true,
    "vim.highlightedyank.enable": true,
    "vim.easymotion": true,
    "vim.highlightedyank.duration": 200,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        // Switching between buffers
        {
            "before": ["<S-h>"],
            "commands": [":bprevious"]
        },
        {
            "before": ["<S-l>"],
            "commands": [":bnext"]
        },
        // Pane splits
        {
            "before": ["leader", "v"],
            "commands": [":vsplit"]
        },
        {
            "before": ["leader", "s"],
            "commands": [":split"]
        },
        // Focus pane splits
        {
            "before": ["leader", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["leader", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["leader", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["leader", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        // Nice to have
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.quickOpen"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
    ],

    /* --- To make the theme "One Monokai Darker" more vibrant --- */
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["entity.name.function", "variable.function"],
                "settings": {
                    "foreground": "#a1ef4e"
                }
            },
            {
                "scope": [
                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.other"
                ],
                "settings": {
                    "foreground": "#ee5257"
                }
            },
            {
                "scope": ["entity.name.keyword", "variable.keyword"],
                "settings": {
                    "foreground": "#4aa5e8"
                }
            },
            {
                "scope": [
                    "variable",
                    "variable.language",
                    "variable.other",
                    "variable.other.local",
                    "variable.other.global",
                    "variable.parameter",
                    "meta.use.rust",
                    "meta.mod.rust",
                    "entity.name.module.rust",
                    "entity.name.namespace.rust"
                ],
                "settings": {
                    "foreground": "#d7d7d7"
                }
            }
        ]
    },
    "workbench.colorCustomizations": {
        "editor.background": "#090b10",
        "tab.activeBorderTop": "#3492d4",
        "statusBar.background": "#0000ff",
        "statusBar.foreground": "#ffff",
        "activityBar.activeBorder": "#3492d4",
        "sideBar.background": "#080a0f",
        "sideBar.border": "#080a0f",
        "activityBar.background": "#080a0f",
        "titleBar.activeBackground": "#080a0f"
    },
    /* --- END --- */

    /* EXTENSION SETTINGS */
    "extensions.ignoreRecommendations": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },

    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },

    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",

    "prettier.tabWidth": 4,
    "chat.commandCenter.enabled": false
}
