{
    "icon_theme": "Material Icon Theme",
    "buffer_font_family": "JetBrains Mono",
    "format_on_save": "prettier",
    "tab_size": 4,
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "vim_mode": true,
    "relative_line_numbers": true,

    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "One Dark"
    },
    "project_panel": {
        "dock": "right",
        "indent_size": 16
    },
    "terminal": {
        "dock": "bottom"
    }
}
